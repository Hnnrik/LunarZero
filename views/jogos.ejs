<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="jogos.css">
    <script src="script.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <title>jogos</title>
    
<body>
    <header>
        <section id="section-mobile-home">
            <span>
                <button id="gatilhoMenu"><img src="icones/menu.svg" class="btn-nav-mobile-img" alt=""></button>
            </span>
        </section>
        <nav>
            <div class="logo" id="redireciona"> 
                <script>
                    document.getElementById("redireciona").addEventListener("click", function() {
                        window.location.href = "/";
                    });
                </script>
                    <img src="fotos/lunarfoguete.png" alt="">
                    <h4>LUNAR</h4>
            </div>
            <ul type="none" class="menu">
                <li>
                    <a href="biblioteca"><img class="iconeMenu" src="icones/perfil.svg" alt=""></a>
                </li>
                <li>
                    <a href="jogos"><img class="iconeMenu" src="icones/jogos.svg" alt=""></a>
                </li>
                <li>
                    <a href="criador.html"><img class="iconeMenu" src="icones/criador.svg" alt=""></a>
                </li>
                <li>
                    <a href="sobre.html"><img class="iconeMenu" src="icones/sobre.svg" alt=""></a>
                </li>
            </ul>
            <div class="perfil">
                <img class="icone" src="https://avatars.githubusercontent.com/u/93449870?v=4">
            </div>
        </nav>
    </header>
    <main>
        
            <form class="pesquisa">
                    <div id="div-pesquisa">
                            <button type="submit" id="img-scr"><img id="img-src-img" src="icones/srcescuro.svg" alt=""></button>
                        <input class="input-pesquisa" type="text" placeholder="Buscar por Jogo">
                       
                        
                    </div>
               
                
            </form>
            <div id="menuOffCanvas" class="conteudoOffCanvas">
                <ul class="listaOffCanvas">
                    <li>
                        <a href="home.html"><img class="iconeMenu" src="icones/home.svg" alt=""></a>
                    </li>
                    <li>
                        <a href="biblioteca.html"><img class="iconeMenu" src="icones/jogos.svg" alt=""></a>
                    </li>
                    <li>
                        <a href="sobre.html"><img class="iconeMenu" src="icones/sobre.svg" alt=""></a>
                    </li>
                </ul>
            </div>
      
            <section class="cont-jogos">
                <% jogos.forEach(jogo => { %>
                    <div><a href="/tela-jogo/<%= jogo.id %>"><img src="<%= jogo.imagem %>" alt=""></a></div>
                <% }); %>

           
                 
        </section>
      

    </main>
    
</body>
</html>