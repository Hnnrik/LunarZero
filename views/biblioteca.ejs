<!-- Scripts do Bootstrap e do jQuery -->


<section class="cont-jogos">
    <% jogos.forEach(jogo => { %>
        <div class="div-jogo" data-bs-toggle="popover" title="Opções" data-bs-content="<a href='/editar-jogo/<%= jogo._id %>'>Editar</a> | <a href='/deletar-jogo/<%= jogo._id %>'>Deletar</a>">
            <!-- Imagem do jogo -->
            <a href="#"><img src="<%= jogo.imagem %>" alt=""></a>
        </div>
    <% }); %>
</section>

<script>
    // Inicialize os popovers do Bootstrap
    $(document).ready(function(){
        $('.div-jogo').click(function() {
            $(this).popover({
                html: true, // Permitir conteúdo HTML no popover
                trigger: 'manual' // Definir o gatilho manualmente
            }).popover('show'); // Mostrar o popover quando a div for clicada
        });
    });
</script>


       
